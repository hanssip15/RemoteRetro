# URL koneksi ke database PostgreSQL (gunakan format sesuai provider, contoh: Neon, Supabase, dsb.)
DATABASE_URL=postgresql://<username>:<password>@<host>/<database_name>?sslmode=require&channel_binding=require

# Base URL dari server backend Anda
BASE_URL=http://localhost:3001

# Port di mana backend Anda berjalan
PORT=3001

# URL dari frontend (React/Vue/Next.js, dsb.)
FRONTEND_URL=http://localhost:5173

# Domain yang diizinkan untuk akses CORS (pisahkan dengan koma jika lebih dari satu)
CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# Secret key untuk enkripsi dan validasi JWT token. HARUS bersifat rahasia dan kompleks.
JWT_SECRET=<your_jwt_secret_key>

# Google OAuth Client ID dari Google Developer Console
GOOGLE_CLIENT_ID=<your_google_client_id>

# Google OAuth Client Secret dari Google Developer Console
GOOGLE_CLIENT_SECRET=<your_google_client_secret>

# Email pengirim (biasanya Gmail) untuk fitur pengiriman email seperti verifikasi atau reset password
EMAIL_USER=<your_email_address>

# Password aplikasi (App Password) untuk akun email pengirim. JANGAN gunakan password akun Gmail langsung.
EMAIL_PASSWORD=<your_email_app_password>
